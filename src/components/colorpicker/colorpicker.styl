@import '../../styles/variables.styl'

.colorpicker
  padding-bottom: 10px

  &__add
    width: 45px
    height: 45px
    display: inline-block
    border-radius: 50%
    margin-left: 30px
    text-align: center
    vertical-align: bottom
    background: colors['seagreen']
    box-shadow: rgba(0, 0, 0, 0.15) 0px 3px 5px, rgba(0, 0, 0, 0.2) 0px 3px 5px
    transition: background 400ms
    cursor: pointer

    &:hover
      background: colors['seagreenlight']

  input
    width: 130px
    height: 35px
    display: inline-block
    margin-top: 10px
    margin-left: 10px
    padding-bottom: 10px
    padding-left: 10px
    font-family: 'robotothin'
    font-size: 25px
    border-width: 0 0 2px
    color: #fff
    background: colors['blue']
    outline: none
    border-color: initial

