.frame
  height: 100px
  width: 100px
  display: inline-block
  position: relative
  margin-right: 10px
  // background: #1B2631
  background: url(../../images/tile-light.png) repeat
  border: 4px solid #40606d
  transition: border-width 50ms
  cursor: pointer

  canvas
    width: 100%
    height: 100%

  &__index
    position: absolute
    width: 20px
    height: 20px
    text-align: center
    font-size: 0.9em
    color: #5b5c5d
    background: #b7b7b7

  &.active
    border-color: #21618c
    border-width: 7px
