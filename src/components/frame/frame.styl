@import '../../styles/mixins.styl'

.frame
  height: 100px
  width: 100px
  display: inline-block
  position: relative
  margin-right: 10px
  vertical-align: middle
  text-align: center
  background: #1B2631
  // background: url(../../images/tile-light.png) repeat
  border: 4px solid #40606d
  transition: border-width 50ms
  cursor: pointer

  &__index
    position: absolute
    display: block
    width: 20px
    height: 20px
    text-align: center
    font-size: 0.9em
    color: #5b5c5d
    background: #b7b7b7

  &__image
    display: inline-block

    &-canvas
      width: 100%
      height: 100%
      background: url(../../images/tile-light.png) repeat
      pixelize()

  &.active
    border-color: #21618c
    border-width: 7px
