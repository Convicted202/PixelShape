@import '../../styles/variables.styl'

.toolbutton
  width: 70px
  height: 70px
  border-bottom: 1px solid colors['paleblue']
  border-left: 8px solid colors['deeppaleblue']
  cursor: pointer

  &:first-child
    border-top-right-radius: 6px

  &__icon
    margin: 15px 11px
    fill: colors['grey']

  &__active-button
    display: inline-block
    height: 70px

    &[data-tooltip]:before
      background: #1b2631
      left: 105%
      z-index: 1

    &.tooltipshift[data-tooltip]:before
      margin-top: -25px

  &:hover, &.active
    border-left-color: colors['seagreen']
    background: colors['deeppaleblue']

    .toolbutton__icon
      fill: colors['seagreen']

  &:hover
    .toolbutton-dropdown
      display: inline-flex

  &-dropdown
    left: 90px
    list-style: none
    padding-left: 0
    position: absolute
    display: none

    &:before
      content: ''
      position: absolute
      height: 0
      width: 0
      left: -20px
      margin-top: 25px
      border: 10px solid #264653
      border-top-color: transparent
      border-left-color: transparent
      border-bottom-color: transparent

    // just to make sure that ul won't hide when we're between tool and dropdown ul
    &:after
      content: ''
      position: absolute
      width: 20px
      height: 70px
      left: -20px

    &__toolbutton
      width: 70px
      height: 70px
      cursor: pointer
      background: #264653
      border-left: 1px solid colors['deeppaleblue']

      &__icon
        margin: 15px
        fill: #b7b7b7

      &:first-child
        border-left: none
        border-top-left-radius: 6px
        border-bottom-left-radius: 6px

      &:last-child
        border-top-right-radius: 6px
        border-bottom-right-radius: 6px

      &:hover, &.active
        border-left-color: colors['seagreen']
        border-bottom: 6px solid colors['seagreen'];

        .toolbutton-dropdown__toolbutton__icon
          fill: colors['seagreen']


      &[data-tooltip]:before
        background: #1b2631
        z-index: 1
