@import '../../styles/variables.styl'

.apptoolbox
  position: absolute
  top: 0
  left: 0
  right: 0
  width: 310px
  height: 60px
  padding: 5px
  margin: 0 auto
  border-bottom-left-radius: 4px
  border-bottom-right-radius: 4px
  border: 1px solid #40606d
  box-shadow: 0 1px 1px #40606d
  background: #365561
  z-index: 1

  &__buttons
    width: 100%
    height: 100%
    display: flex
    margin: 0
    padding: 0
    align-items: center
    justify-content: center
    list-style-type: none

.modalLayer
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: 1
  background-color: rgba(0,0,0,0.4)
