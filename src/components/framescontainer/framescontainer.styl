.framescontainer
  width: 100%
  display: flex

  &__gif-container
    width: 110px
    min-width: 110px
    height: 100px
    padding-right: 10px
    border-right: 1px solid #6d858e
    box-shadow: 1px 0px 0 #384f58

  &__gif
    width: 100%
    height: 100%
    position: relative
    background: url(../../images/tile-light.png) repeat
    border: 4px solid #1b2631

    img
      width: 100%
      height: 100%

    &-fps
      width: 40px
      height: 20px
      position: absolute
      right: 0
      text-align: center
      font-size: .9em
      opacity: 0.8
      color: #5b5c5d
      background: #b7b7b7

  &__frames
    flex-grow: 1
    display: block
    padding-left: 10px
    overflow: auto
    overflow-y: hidden
    white-space: nowrap

    &-addframe
      height: 90px
      width: 90px
      position: relative
      display: inline-block
      margin: 5px 0
      vertical-align: top
      border: 4px dashed #1b2631
      fill: #1b2631
      transition: border-color 200ms, fill 200ms
      cursor: pointer

      &:hover
        border-color: #b7b7b7
        fill: #b7b7b7

      &__icon
        position: absolute
        top: 0
        right: 0
        left: 0
        bottom: 0
        margin: auto
        fill: inherit
