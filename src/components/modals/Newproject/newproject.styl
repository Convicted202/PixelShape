.newproject-import
  display: flex
  border-top: 1px solid #e0e0e0
  margin-top: 10px
  padding-top: 20px
  padding-bottom: 10px

  &__upload
    flex: 1

    &-btn
      display: inline-block
      width: auto
      height: 40px
      color: #fff
      background-color: #264653
      padding: 0 29px
      vertical-align: middle
      text-align: center
      line-height: 40px
      box-shadow: 0 3px 5px rgba(0,0,0,.15), 0 3px 5px rgba(0,0,0,.2)
      transition: background-color .3s
      cursor: pointer

      &:hover
        background-color: #40606d

      &__icon
        margin-left: 10px
        vertical-align: text-bottom
        fill: #fff

  &__info
    flex: 1
    text-align: center

    &-file
      margin: 0
      line-height: 2.4em
      font-weight: bold

    &-row
      display: block
      margin: 0
      text-align: left
      font-size: 0.8em
      line-height: 20px

      &__note
        font-weight: bold

  &__warning
    font-size: 0.8em




.newproject-import__info-spinner
  width: 4em
  height: 4em
  position: relative
  float: left
  margin-left: 30px
  border-radius: 50%
  font-size: 10px
  animation: spinner 0.9s infinite cubic-bezier(0.65, 0.05, 0.36, 1)
  animation: spinner 0.9s infinite linear
  transform: translateZ(0)

  &:before
    content: ''
    width: 50%
    height: 50%
    background: #264653
    border-radius: 100% 0 0 0
    position: absolute
    top: 0
    left: 0

  &:after
    content: ''
    position: absolute
    top: 0
    left: 0
    bottom: 0
    right: 0
    margin: auto
    width: 75%
    height: 75%
    border-radius: 50%
    background: #fff

@keyframes spinner
  0%
    -webkit-transform: rotate(0deg)
    transform: rotate(0deg)
  100%
    -webkit-transform: rotate(360deg)
    transform: rotate(360deg)

.newproject-import__info-tracking
  float: left
  margin-left: 30px
  line-height: 40px
  font-family: robotobold
