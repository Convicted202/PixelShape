@import './fonts.styl'
@import './variables.styl'
@import './inputrange.styl'

*
  box-sizing: border-box

  &::-webkit-scrollbar
    width:  0.5em
    height: 0.5em

  &::-webkit-scrollbar-thumb
    background: #708090

  &::-webkit-scrollbar-track
    background: #a9b3bd

body, html, #root
  width: 100%
  height: 100%
  clear: both
  margin: 0
  padding: 0
  outline: 0
  overflow: hidden;

body
  font-family: 'Roboto'

inputrange(2px, #c0c0c0, 20px, colors['seagreen'], colors['blue'])

[data-tooltip]
  &:before
    content: attr(data-tooltip) ' ' attr(data-shortcut)
    position: absolute
    white-space: pre
    padding: 3px 6px
    font-size: 0.8em
    border-radius: 4px
    font-family: robotothin
    background: #264653
    color: #ebebeb
    pointer-events: none
    display: block
    opacity: 0
    text-transform: capitalize
    transition: opacity .2s

  &[data-multiline-tooltip]
    &:before
      content: attr(data-tooltip) "\A" attr(data-shortcut)

  &:hover:before
    opacity: 1

.tooltip-bottom[data-tooltip]
  &:before
    top: calc(100% + 7px)

.tooltip-right[data-tooltip]
  &:before
    left: calc(100% + 7px)

.tooltip-top[data-tooltip]
  &:before
    bottom: calc(100% + 7px)
