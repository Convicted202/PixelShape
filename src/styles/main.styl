@import './fonts.styl'
@import './variables.styl'

*
  box-sizing: border-box

body, html, #root
  width: 100%
  height: 100%
  clear: both
  margin: 0
  padding: 0
  outline: 0
  overflow: hidden;

body
  font-family: 'Roboto'

input[type=range]
  display: block
  -webkit-appearance: none
  background-color: silver
  height: 2px
  margin: 0 auto
  width: 90%
  outline: none

input[type=range]::-webkit-slider-thumb
  -webkit-appearance: none
  background-color: colors['seagreen']
  border: 2px solid colors['blue']
  width: 20px
  height: 20px
  border-radius: 50%
  cursor: pointer

input[type=range]::-moz-range-thumb
  background-color: colors['seagreen']
  border: 2px solid colors['blue']
  width: 20px
  height: 20px
  border-radius: 50%
  cursor: pointer

// this stuff is not working... without padding in input
input[type=range]::-ms-thumb
  background-color: colors['seagreen']
  border: 2px solid colors['blue']
  width: 20px
  height: 20px
  border-radius: 50%
  cursor: pointer

.switch
  width: 40px
  position: relative
  visibility: hidden
  cursor: pointer
  margin-right: 10px

  &:before
    content: ''
    position: absolute
    visibility: visible
    width: 40px
    height: 15px
    border-radius: 10px
    background: rgba(81, 107, 117, 0.7)
    box-shadow: inset 0 1px 1px 0px #637075

  &:after
    content: ''
    position: absolute
    visibility: visible
    width: 25px
    height: 25px
    left: -5px
    margin-top: -5px
    border-radius: 50%
    background: #c7c7c7
    box-shadow: 0px 2px 2px #a5a5a5
    transition: all 0.3s ease

  &:checked
    &:before
      background: #bddcd7

    &:after
      left: 20px
      background: #70c1b3
